{
  "name": "@yuci/utils",
  "version": "0.1.0",
  "author": "yuci <yucihent@163.com>",
  "description": "development toolkit",
  "keywords": [
    "yuci",
    "utils",
    "@yuci/utils"
  ],
  "license": "MIT",
  "packageManager": "pnpm@8.6.3",
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "type": "module",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./lib/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "lib",
    "dist",
    "types"
  ],
  "scripts": {
    "commit": "cz",
    "clear": "rimraf lib dist",
    "typeCheck": "tsc",
    "build:esm": "esbuild src/index.ts --bundle --format=esm --outdir=lib",
    "build:cjs": "esbuild src/index.ts --bundle --format=cjs --outdir=dist",
    "build": "run-s clear typeCheck build:esm build:cjs",
    "lint": "npx eslint --fix . && npx prettier --write .",
    "release": "release-it",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@release-it/conventional-changelog": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "release-it": "^16.1.5",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "src/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
