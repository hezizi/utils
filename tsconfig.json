{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",
    "strict": true,
    "noImplicitThis": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["vitest.config.ts", "src/**/*.test.*"]
}
